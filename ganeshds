===========================================
PROGRAM 3: DETECT LOOP IN LINKED LIST
===========================================

#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* createNode(int value) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;
    return newNode;
}

// Function to detect loop using Floydâ€™s Cycle Detection
int detectLoop(struct Node* head) {
    struct Node* slow = head;
    struct Node* fast = head;

    while (slow && fast && fast->next) {
        slow = slow->next;
        fast = fast->next->next;

        if (slow == fast)
            return 1;   // Loop detected
    }
    return 0;   // No loop
}

int main() {
    struct Node* head = createNode(1);
    head->next = createNode(2);
    head->next->next = createNode(3);
    head->next->next->next = head;   // Creating loop

    if (detectLoop(head))
        printf("Loop detected in linked list");
    else
        printf("No loop detected");

    return 0;
}
